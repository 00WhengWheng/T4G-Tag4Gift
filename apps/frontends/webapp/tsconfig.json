{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "esnext", 
    "jsx": "react-jsx",
    "allowJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "bundler",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@t4g/types": ["../../../packages/types/src/index.ts"],
      "@t4g/auth-users": ["../../../packages/auth-users/src/index.ts"]
    }
  },
  "include": ["src"],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ]
}
